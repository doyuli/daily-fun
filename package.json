  "main": "index.js",
  "scripts": {
    "docs": "vitepress dev docs",
    "play": "cd playground && pnpm dev",
    "build": "pnpm -r run build",
    "build:watch": "pnpm -r --parallel run build --watch",
    "test": "pnpm test:unit",
    "test:unit": "vitest --project unit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "update": "node scripts/update.js",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@iconify/json": "catalog:",
    "@rollup/plugin-json": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "gray-matter": "catalog:",
    "jsdom": "catalog:",
    "lint-staged": "catalog:",
    "picocolors": "catalog:",
    "prettier": "catalog:",
    "rollup": "catalog:",
    "rollup-plugin-dts": "catalog:",
    "rollup-plugin-esbuild": "catalog:",
    "rollup-plugin-pure": "catalog:",
    "simple-git-hooks": "catalog:",
    "tinyglobby": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "vite": "catalog:",
    "vitepress": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "eslint --cache --fix"
    ]
  }
